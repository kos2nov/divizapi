# AWS Account / Region
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1

# Deployment / App
STAGE=prod
LOG_LEVEL=INFO
# Set to true for local development to force BASE_URL to http://localhost:8000
LOCAL_DEV=false
# Base URL of your app (scheme+host, no trailing slash). Used for OAuth callbacks and SPA redirects when not LOCAL_DEV
BASE_URL=https://diviz.example.com

# AWS Cognito Configuration
COGNITO_REGION=your_aws_region
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_APP_CLIENT_ID=your_app_client_id
COGNITO_APP_CLIENT_SECRET=your_app_client_secret
COGNITO_ALLOWED_GROUPS=your_allowed_groups
# Hosted UI base (no trailing slash), e.g. https://auth.diviz.example.com
COGNITO_DOMAIN_URL=https://auth.diviz.example.com

# API Custom Domain (for API Gateway existing domain import)
# Public DNS zone that holds your domain (e.g. example.com)
HOSTED_ZONE_NAME=example.com
# Subdomain for API (e.g. diviz)
API_SUBDOMAIN=diviz
# Full API domain name (e.g. diviz.example.com) used to import existing API Gateway domain
API_DOMAIN_NAME=diviz.example.com
# API Gateway domain alias target and hosted zone id (from API Gateway domain details)
API_DOMAIN_ALIAS_TARGET=d-xxxxxxxxxx.execute-api.us-east-1.amazonaws.com
API_DOMAIN_ALIAS_HOSTED_ZONE_ID=ZABCDEFGHIJKL
# ACM certificate for the custom domain (must be in the same region as API Gateway regional endpoint)
ACM_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Fireflies API key
FIREFLIES_API_KEY=your_fireflies_api_key

# Webhook HMAC secret (used to verify /webhook requests)
FIREFLIES_WEBHOOK_SECRET=your_fireflies_webhook_secret

OPENAI_API_KEY=sk-proj-your_openai_api_key
OPENAI_MODEL=gpt-5.1-nano
